/**index.wxss**/

#index-main {
  margin: 10% 5% 10% 5%;
  height: 90%;
  border: 3px black solid;
  border-radius: 25px;
  display: flex;
  flex-direction: column;
  align-items: center; 
}

#index-logo{
  margin-top: 300rpx;
  height: 150rpx;
  width: 150rpx;
}

#index-userInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: fixed;
  bottom: 400rpx;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}